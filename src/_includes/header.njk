<header
  class="mx-auto mt-10 mb-20 flex max-w-5xl items-center justify-between font-fragment-glare text-xl font-extrabold"
>
  <!-- Picture and Name -->
  <a href="/" class="flex items-center gap-3">
    <img
      src="/_tmp/public/img/header.png"
      alt="headshot"
      class="max-w-[3.5rem] rounded-full"
    /><span>Joe Petrillo</span></a
  >

  <!-- Open Menu Button -->
  <button id="open-btn" class="md:hidden" name="open_menu">
    <svg
      xmlns="http://www.w3.org/2000/svg"
      class="h-12 w-12"
      fill="none"
      viewBox="0 0 24 24"
      stroke="currentColor"
      stroke-width="2"
    >
      <path
        stroke-linecap="round"
        stroke-linejoin="round"
        d="M4 6h16M4 12h16m-7 6h7"
      />
    </svg>
  </button>

  <!-- Mobile Nav Menu -->
  <nav
    class="fixed top-0 left-0 z-10 h-full w-full -translate-x-full bg-stone-800 md:static md:h-auto md:w-auto md:!translate-x-0 md:bg-transparent"
  >
    <!-- Close Menu Button -->
    <button
      id="close-btn"
      class="absolute top-11 right-6 md:hidden"
      name="close_menu"
    >
      <svg
        xmlns="http://www.w3.org/2000/svg"
        class="h-12 w-12"
        fill="none"
        viewBox="0 0 24 24"
        stroke="currentColor"
        stroke-width="2"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          d="M6 18L18 6M6 6l12 12"
        />
      </svg>
    </button>

    <!-- Nav Links -->
    <div class="flex h-full items-center justify-center md:block md:h-auto">
      <div
        class="flex flex-col items-start justify-center gap-12 text-3xl md:flex-row md:items-center md:gap-4 md:text-xl"
      >
        <a
          class="flex items-center gap-2 rounded-md p-3 hover:bg-stone-700 md:!translate-y-0 md:p-2 md:!opacity-100 md:hover:bg-stone-800"
          href="/blog/"
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            viewBox="0 0 448 512"
            class="h-8 w-8 fill-stone-50 md:h-6 md:w-6"
          >
