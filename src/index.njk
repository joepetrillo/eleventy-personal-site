  <section class="grid grid-cols-1 gap-20 sm:grid-cols-2 sm:gap-6 lg:gap-10">
    <div>
      <h2 class="mb-6 font-fragment-glare text-3xl font-extrabold">
        Latest Posts
      </h2>
      {%- for post in collections.post.slice(collections.post.length-2,
      collections.post.length) | reverse -%}
      <a href="{{ post.url }}">
        <div
          class="mb-6 rounded-md border-2 border-stone-800 p-4 transition-[background-color] duration-150 ease-out hover:bg-stone-800"
        >
          <h3 class="mb-1 text-lg underline">
            {{ post.data.title }}
          </h3>
          <span class="text-base text-stone-300">
            {{ post.data.date | date }}
          </span>
        </div>
      </a>
      {%- endfor %}
      <a class="underline" href="/blog/">View all blog posts</a>
    </div>
    <div>
      <h2 class="mb-6 font-fragment-glare text-3xl font-extrabold">
        Latest Projects
      </h2>
      {%- for project in collections.project.slice(collections.project.length-2,
      collections.project.length) | reverse -%}
      <a href="{{ project.url }}">
        <div
          class="mb-6 rounded-md border-2 border-stone-800 p-4 transition-[background-color] duration-150 ease-out hover:bg-stone-800"
        >
